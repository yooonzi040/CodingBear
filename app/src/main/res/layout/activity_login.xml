<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_hello"
            android:fontFamily="@font/pretendard_semibold"
            android:paddingLeft="26dp"
            android:paddingTop="12dp"
            android:paddingRight="26dp"
            android:paddingBottom="12dp"
            android:text="만나서 반가워요!"
            android:textAppearance="@style/login_bold_text"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:bufferType="spannable"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="5sp"
            android:text="안녕하세요!\n이름을 적어주세요"
            android:textAppearance="@style/login_text" />
        />

        <EditText
            android:id="@+id/input_loginName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/login_input"
            android:ems="10"
            android:fontFamily="@font/pretendard_medium"
            android:hint="홍길동"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#E0E0E0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="20dp"
            android:bufferType="spannable"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="5sp"
            android:text="생년월일을 적어주세요"
            android:textAppearance="@style/login_text" />

        <EditText
            android:id="@+id/input_loginBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/login_input"
            android:ems="10"
            android:fontFamily="@font/pretendard_medium"
            android:hint="19712345 (8자리)"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#E0E0E0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="20dp"
            android:bufferType="spannable"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="5sp"
            android:text="휴대폰 번호를 적어주세요"
            android:textAppearance="@style/login_text" />

        <EditText
            android:id="@+id/input_loginPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@drawable/login_input"
            android:ems="10"
            android:fontFamily="@font/pretendard_medium"
            android:hint="01012345678"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#E0E0E0"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/btn_tosplash"
            android:layout_width="84dp"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btnback"
            android:fontFamily="@font/pretendard_medium"
            android:text="이전"
            android:stateListAnimator="@null"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_loginToTTS"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:background="@drawable/onboarding_btn"
            android:enabled="true"
            android:fontFamily="@font/pretendard_medium"
            android:stateListAnimator="@null"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>